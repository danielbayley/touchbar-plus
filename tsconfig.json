{
  "compilerOptions": {
    "jsx": "react",
    "declaration": false,
    "outDir": "./lib",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2015"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
